{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
        "hooks/*": ["hooks/*"],
		"store/*": ["store/*"],
        "app/*": ["app/*"],
      	"pages/*": ["pages/*"],
		"widgets/*": ["widgets/*"],
      	"features/*": ["features/*"],
      	"entities/*": ["entities/*"],
      	"shared/*": ["shared/*"],
      	"icons/*": ["icons/*"],
      	"images/*": ["images/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
