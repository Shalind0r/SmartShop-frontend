root = true

[*]
indent_style = tab
tab_width = 4
end_of_line = lf
charset = utf-8

[*.{html,css,module.css,scss,js,ts,jsx,tsx}]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md}]
trim_trailing_whitespace = false
insert_final_newline = true

[*{package.json,package-lock.json}]
indent_style = space
indent_size = 2
